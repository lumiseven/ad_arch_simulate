# Environment Configuration
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./ad_system.db
SYNC_DATABASE_URL=sqlite:///./ad_system.db
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Service Configuration
HOST=0.0.0.0
DEBUG=true
LOG_LEVEL=INFO
CORS_ORIGINS=*

# Service Ports (optional - will use defaults if not set)
AD_MANAGEMENT_PORT=8001
DSP_PORT=8002
SSP_PORT=8003
AD_EXCHANGE_PORT=8004
DMP_PORT=8005

# Service URLs for inter-service communication
AD_MANAGEMENT_URL=http://localhost:8001
DSP_URL=http://localhost:8002
SSP_URL=http://localhost:8003
AD_EXCHANGE_URL=http://localhost:8004
DMP_URL=http://localhost:8005

# RTB Configuration
RTB_TIMEOUT_MS=100
DSP_TIMEOUT_MS=50
MAX_CONCURRENT_AUCTIONS=100
DEFAULT_FLOOR_PRICE=0.01
EXCHANGE_FEE_RATE=0.1

# Logging Configuration
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_JSON_FORMAT=false

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
API_KEY_HEADER=X-API-Key

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000

# Monitoring Configuration
MONITORING_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30