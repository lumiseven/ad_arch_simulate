{
  "service": {
    "host": "0.0.0.0",
    "debug": false,
    "log_level": "INFO",
    "cors_origins": ["*"]
  },
  "database": {
    "url": "sqlite+aiosqlite:///./ad_system.db",
    "sync_url": "sqlite:///./ad_system.db",
    "echo": false,
    "pool_size": 5,
    "max_overflow": 10,
    "pool_timeout": 30,
    "pool_recycle": 3600
  },
  "rtb": {
    "timeout_ms": 100,
    "dsp_timeout_ms": 50,
    "max_concurrent_auctions": 100,
    "default_floor_price": 0.01,
    "exchange_fee_rate": 0.1
  },
  "service_urls": {
    "ad-management": "http://localhost:8001",
    "dsp": "http://localhost:8002",
    "ssp": "http://localhost:8003",
    "ad-exchange": "http://localhost:8004",
    "dmp": "http://localhost:8005"
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file_path": null,
    "max_file_size": 10485760,
    "backup_count": 5,
    "json_format": false
  },
  "security": {
    "secret_key": "your-secret-key-change-in-production",
    "algorithm": "HS256",
    "access_token_expire_minutes": 30,
    "api_key_header": "X-API-Key"
  },
  "cache": {
    "enabled": true,
    "ttl_seconds": 300,
    "max_size": 1000
  },
  "monitoring": {
    "enabled": true,
    "metrics_port": 9090,
    "health_check_interval": 30
  }
}